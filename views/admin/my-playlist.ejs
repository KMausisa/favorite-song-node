<%- include("../includes/head.ejs") %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/song.css">
</head>

<body>
    <%- include("../includes/nav.ejs") %>
    <main>
        <h1>My Playlists</h1>
        <% if (list.length > 0) { %>
            <div class="grid">
                <% for (let playlist of list) { %>
                    <article class="card song-item">
                        <header class="card__header">
                            <h2 class="song__title">
                                <%= playlist.playlistName %>
                            </h2>
                        </header>
                        <div class="card__image">
                            <img class="playlist__img" src="<%= playlist.imageUrl %>" alt="<%= playlist.playlistName %>">
                        </div>
                        <div class="card__actions">
                            <form action="/admin/add-to-playlist" method="POST">
                                <input type="hidden" value="<%= playlist._id %>" name="playlistId">
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                <button class="btn" type="submit">View</button>
                            </form>

                        </div>
                    </article>
                <% } %>
            </div>
        <% } %>
        <div class="form-control">
            <a class="btn create-playlist-btn" href="/admin/create-playlist">Create New Playlist</a>
        </div>
        
    </main>
</body>

<%- include("../includes/end.ejs") %>